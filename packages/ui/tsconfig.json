{
  "files": [],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "storybook-static",
    ".next"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "allowJs": false,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "baseUrl": "."
  }
}
